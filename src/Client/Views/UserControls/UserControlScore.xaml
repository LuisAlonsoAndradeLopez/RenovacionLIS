<UserControl x:Class="Client.Views.UserControls.UserControlScore"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Border Background="#90000000" CornerRadius="10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
                <TextBlock x:Name="Txt_UserName" Text="User" Foreground="White" FontSize="20" FontFamily="{StaticResource K2DBold}" Margin="15, 15, 15, 15"/>
                <TextBlock x:Name="Txt_Score" Text="500" Foreground="White" FontSize="20" FontFamily="{StaticResource K2DBold}" Margin="15, 15, 15, 15"/>

            </StackPanel>
        </Border>


    </Grid>
</UserControl>
