<Page x:Class="Renovación_LIS_Client.View.LevelOneView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Renovación_LIS_Client.View"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="LevelOneView">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Source="/images/WallpaperLevelOneImage.png" Stretch="Fill" Grid.RowSpan="3"/>

        <Button Content="Regresar"
                FontFamily="{StaticResource K2DBold}"
                FontSize="20"
                Height="45"
                Width="100"
                Style="{StaticResource underlineButton}"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Grid.Row="0"
                Click="GoBack"/>

        <Border Background="#80000000"
                Grid.Row="3"
                Margin="20"
                CornerRadius="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="0" Margin="15,0,0,0"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="1" Margin="15,0,0,0"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="2" Margin="15,0,0,0"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="3" Margin="15,0,0,0"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="0" Grid.Column="2"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="1" Grid.Column="2"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="2" Grid.Column="2"/>
                <Border Background="#FFC436" Width="24" Height="24" CornerRadius="100" Grid.Row="3" Grid.Column="2"/>

                <TextBlock 
                       Text="1. Software que gestiona recursos y servicios del hardware"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="2. Estructura de control que repite un bloque de código mientras una condición sea verdadera"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="1"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="3.  Espacio donde los estudiantes de principios de construcción trabajan arduamente"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="1"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="4.  Sentencia utilizada en bases de datos para recuperar datos"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="1"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="5.  Estructura de datos en la que los elementos están organizados en una secuencia lineal"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="3"
                       Grid.Row="0"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="6. Estructura de control que repite un bloque de código un número específico de veces"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="3"
                       Grid.Row="1"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="7. Paradigma de programación que destaca el uso de clases y objetos"
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="3"
                       Grid.Row="2"
                       VerticalAlignment="Center"
                       Margin="10"/>

                <TextBlock 
                       Text="8. Estructura de datos que sigue el principio primero en entrar, primero en salir "
                       TextWrapping="Wrap"
                       FontFamily="{StaticResource K2DRegular}"
                       Foreground="White"
                       FontSize="16"
                       Grid.Column="3"
                       Grid.Row="3"
                       VerticalAlignment="Center"
                       Margin="10"/>
            </Grid>

        </Border>

        <Border Background="#80000000" Grid.Row="1" Margin="160,10" CornerRadius="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
